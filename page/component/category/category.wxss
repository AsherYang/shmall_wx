@import '../../common/common.wxss';

page, .main {
  height: 100%;
}

/*border-right: 1px solid #ddd;*/

.categroy-left {
  float: left;
  width: 150rpx;
  height: 100%;
  box-sizing: border-box;
  background: #f5f5f5;
}

.categroy-left .cate-list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #888;
  font-size: 28rpx;
  border-left: 3px solid #f5f5f5;
}

.categroy-left .cate-list.on {
  color: #c00;
  border-color: #c00;
  background: #fff;
  font-size: 30rpx;
}

.categroy-right {
  float: right;
  width: 600rpx;
  height: 100%;
  overflow: hidden;
}

.cate-box {
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.cate-box .cate-banner image {
  display: block;
  width: 100%;
  height: 190rpx;
}

.cate-title {
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  padding: 30rpx 0 55rpx;
  text-align: center;
  color: #ab956d;
  font-size: 28rpx;
}

.cate-title::before {
  position: absolute;
  left: 130rpx;
  top: 43rpx;
  content: '';
  width: 70rpx;
  height: 4rpx;
  background: #ab956d;
}

.cate-title::after {
  position: absolute;
  right: 130rpx;
  top: 43rpx;
  content: '';
  width: 70rpx;
  height: 4rpx;
  background: #ab956d;
}

.product {
  display: inline-block;
  width: 100%;
  height: 300rpx;
  /* background: red; */
  margin: 15rpx;
  /* border: 3rpx solid; */
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  /* border-radius: 50rpx; */
  border-color: #f5f5f5;
  background: #f8f8f8;
  /* box-shadow: 10px 10px 5px #888; */
}

.product image {
  width: 280rpx;
  height: 300rpx;
  margin-bottom: 20rpx;
  /* border: 5rpx solid; *//* border-radius: 25rpx; */
  /* border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx; */
  border-radius: 25rpx;
  border-color: #f5f5f5;
  background: #f8f8f8;
}

.goodname {
  float: right;
  font-size: 24rpx;
  margin-top: 50rpx;
}

.product:nth-child(3n) {
  margin-right: 0;
}

.product-list {
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  text-align: center;
  margin: 0 20rpx 20rpx 0;
  font-size: 24rpx;
}

.product-list image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.product-list:nth-child(3n) {
  margin-right: 0;
}
